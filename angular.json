{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": "19aea601-7bc4-40f2-8f5a-464851584d9a"
  },
  "newProjectRoot": "projects",
  "projects": {
    "replywise": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "replywise:build:production"
            },
            "development": {
              "buildTarget": "replywise:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        },
        "build-extension": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/extension",
            "index": "src/extension-popup.html",
            "browser": "src/extension-main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "manifest.json",
                "input": "chrome-extension",
                "output": "/"
              },
              {
                "glob": "background.js",
                "input": "chrome-extension",
                "output": "/"
              },
              {
                "glob": "content-script.js",
                "input": "chrome-extension",
                "output": "/"
              },
              {
                "glob": "content-style.css",
                "input": "chrome-extension",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "public",
                "output": "/"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "optimization": true,
            "outputHashing": "none",
            "namedChunks": false
          }
        }
      }
    }
  }
}
